{
    {% block common %}
        {% if column.cellType is not null %}
            "cellType": "{{ column.cellType }}",
        {% endif %}
        {% if column.contentPadding is not null %}
            "contentPadding": "{{ column.contentPadding }}",
        {% endif %}
        {% if column.defaultContent is not null %}
            "defaultContent": "{{ column.defaultContent }}",
        {% endif %}
        {% if column.name is not null %}
            "name": "{{ column.name }}",
        {% endif %}
        {% if column.width is not null %}
            "width": "{{ column.width }}",
        {% endif %}
        {% if column.title is not null %}
            "title": "{{ column.title|raw }}",
        {% endif %}
        "searchable": {{ column.searchable|sg_datatable_bool_var }},
        {% if column.visible is same as(true) %}
            "visible": true,
            {% if column.className is not null %}
                "className": "{{ column.className }}",
            {% endif %}
        {% endif %}
        {% if column.visible is same as(false) %}
            "visible": false,
            "className": "never {% if column.className is not null %}{{ column.className }}{% endif %}",
        {% endif %}
        {% if column.orderable is same as(true) %}
            "orderable": true,
            {% if column.orderSequence is not null %}
                "orderSequence": {{ column.orderSequence }},
            {% endif %}
            {% if column.orderData is not null %}
                "orderData": {{ column.orderData }},
            {% endif %}
        {% endif %}
        {% if column.orderable is same as(false) %}
            "orderable": false,
        {% endif %}
    {% endblock %}

    {% block data %}
        "data": "{{ column.data }}",
    {% endblock %}
},
