{% if data is not null %}
    <div class="sg-datatables-{{ datatable_name }}-datetime-{{ column_name }}"></div>

    <script type="text/javascript">
        $(function() {
            moment.locale("{{ app.request.locale }}");

            {% if false == timeago %}
                $(".sg-datatables-{{ datatable_name }}-datetime-{{ column_name }}").html(moment.unix({{ data|date('U') }}).format("{{ date_format }}"));
            {% else %}
                $(".sg-datatables-{{ datatable_name }}-datetime-{{ column_name }}").html(moment.unix({{ data|date('U') }}).fromNow());
            {% endif %}
        });
    </script>
{% endif %}
